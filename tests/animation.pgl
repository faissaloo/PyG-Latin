obj animation
{
    event create
    {
        self.x=0
        self.y=0
        self.image_index=0
        self.sprite=[image_add("tests/testSprite/1.bmp"),image_add("tests/testSprite/2.bmp"),image_add("tests/testSprite/3.bmp")]
    }
    event draw
    {
        draw_sprite(self.sprite[self.image_index],self.y,self.x)
        if self.image_index<len(self.sprite)-1
        {
            self.image_index+=1
        }
        else
        {
            self.image_index=0
        }
    }
}
room rm1 {
    self.room_speed=15
    self.room_width=24
    self.room_height=88
    instance_create(animation,0,0)
}
rm1()
