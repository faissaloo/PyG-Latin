obj player
{
    event create
    {
        self.y=0
        self.x=0
        self.mask_index=[[1]]
    }
    event step
    {

        if keyboard_check_pressed(97)
        {
            self.x-=1
        }
        else if keyboard_check_pressed(100)
        {
            self.x+=1
        }
        else if keyboard_check_pressed(119)
        {
            self.y-=1
        }
        else if keyboard_check_pressed(115)
        {
            self.y+=1
        }

    }
    event draw
    {
        draw_point(self.y,self.x)
        if place_empty(self,self.y+1,self.x)=0
        {
            draw_text(self.y-1,self.x, "Hey!")
        }
    }
}

obj mobTest
{
    event create
    {
        self.y=0
        self.x=0
        self.mask_index=[[1]]
    }
    event step
    {

        if randrange(0,100)=0
        {
            self.x-=1
        }
        if randrange(0,100)=0
        {
            self.x+=1
        }
        if randrange(0,100)=0
        {
            self.y-=1
        }
        if randrange(0,100)=0
        {
            self.y+=1
        }

    }
    event draw
    {
        draw_point(self.y,self.x)
    }
}

obj ctrl
{
  event draw
  {
    draw_text(3,4,"Topdown Game Demo")
  }
}
room rm1 {
    self.room_speed=60
    self.room_width=24
    self.room_height=88
    instance_create(10,10,player)
    instance_create(3,4,ctrl)
    instance_create(20,20,mobTest)
}
current_room=rm1()
