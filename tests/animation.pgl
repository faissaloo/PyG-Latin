obj animation
{
    event create
    {
        self.x=0
        self.y=0
        self.image_index=0
        self.sprite=[sprite_add("tests/testSprite/1.bmp"),sprite_add("tests/testSprite/2.bmp"),sprite_add("tests/testSprite/3.bmp")]
    }
    event draw
    {
        if self.image_index=0
        {
          draw_sprite(self.spriteA,self.y,self.x)
          self.image_index=1
        }
        else if self.image_index=1
        {
          draw_sprite(self.spriteB,self.y,self.x)
          self.image_index=2
        }
        else if self.image_index=2
        {
          draw_sprite(self.spriteC,self.y,self.x)
          self.image_index=0
        }
    }
}
