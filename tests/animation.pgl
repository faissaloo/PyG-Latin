obj animation
{
    event create
    {
        self.x=0
        self.y=0
        self.image_index=0
        self.spriteA=sprite_add("tests/testSprite/1.bmp")
        self.spriteB=sprite_add("tests/testSprite/2.bmp")
        self.spriteC=sprite_add("tests/testSprite/3.bmp")
    }
    event draw
    {
        if self.image_index=0
        {
          draw_sprite(self.spriteA,self.y,self.x)
          self.image_index=1
        }
        else if self.image_index=1
        {
          draw_sprite(self.spriteB,self.y,self.x)
          self.image_index=2
        }
        else if self.image_index=2
        {
          draw_sprite(self.spriteC,self.y,self.x)
          self.image_index=0
        }
    }
}
room rm1 {
    room_speed=15
    room_width=24
    room_height=88
    instance_create(0,0,animation)
}
current_room=rm1()
