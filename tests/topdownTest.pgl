obj player
{
    event create
    {
        self.y=0
        self.x=0
    }
    event step
    {

        if 1+1+1
        {
            self.x-=1
        }
        else if keyboard_check_pressed(100)
        {
            self.x+=1
        }
        else if keyboard_check_pressed(119)
        {
            self.y-=1
        }
        else if keyboard_check_pressed(115)
        {
            self.y+=1
        }

    }
    event draw
    {
        draw_point(self.y,self.x)
    }
}

obj mobTest
{
    event create
    {
        self.y=0
        self.x=0
    }
    event step
    {

        if randrange(0,2)
        {
            self.x-=1
        }
        if randrange(0,2)
        {
            self.x+=1
        }
        if randrange(0,2)
        {
            self.y-=1
        }
        if randrange(0,2)
        {
            self.y+=1
        }

    }
    event draw
    {
        draw_point(self.y,self.x)
    }
}

obj ctrl
{
  event draw
  {
    draw_text(3,4,"Topdown Game Demo")
  }
}
room rm1 {
    room_speed=60
    room_width=24
    room_height=88
    instance_create(10,10,player)
    instance_create(3,4,ctrl)
    instance_create(20,20,mobTest)
}
current_room=rm1()
