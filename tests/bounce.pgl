obj ball
{
    event create
    {
        self.x=0
        self.y=0
        self.image_index=0
        self.image_angle=0
        self.sprite=sprite_add("tests/ballsprite/",0,0)
        self.mask=mask_add("tests/ballsprite/",0,0)
        self.vspeed=-1
        self.gravity=0.1
    }
    event step
    {
        self.y+=self.vspeed
        self.vspeed+=self.gravity
        if place_empty(self.y+6,self.x)=False
        {
            self.vspeed-=1
        }

    }
    event draw
    {
        draw_sprite(self.sprite,self.image_index,self.y,self.x,1,1,self.image_angle)
        if self.image_index<len(self.sprite)-1
        {
            self.image_index+=1
        }
        else
        {
            self.image_index=0
        }
    }
}
obj platform
{
    event create
    {
        self.sprite=sprite_add("tests/blocksprite/",0,0)
        self.mask=mask_add("tests/blocksprite/",0,0)
        self.image_index=0
        self.solid=true
    }
    event draw
    {
        draw_sprite(self.sprite,0,self.y,self.x)
    }
}
room rm1 {
    self.room_speed=15
    self.room_width=60
    self.room_height=30
    instance_create(ball,10,10)
    instance_create(platform,20,10)
}
room_goto(rm1)
